<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainWindow"
    android:onClick="screenTapper"
    android:nestedScrollingEnabled="false"
    android:screenOrientation="sensorPortrait">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="577dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_img"
                android:src="@mipmap/user_bg_128" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:paddingLeft="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/about_title"
                        android:id="@+id/about_title_tv"
                        android:layout_column="1"
                        android:paddingBottom="0dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_text"
                        android:id="@+id/about_text_tv"
                        android:layout_column="1"
                        android:paddingLeft="0dp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:onClick="refreshWifiTapper"
        android:paddingTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="refreshWifiTapper">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refresh_image"
                android:layout_column="0"
                android:src="@mipmap/refresh_bg_24"
                android:paddingTop="5dp"
                android:paddingRight="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/wifi_label_info"
                android:id="@+id/wifiInfo_tv"
                android:layout_row="0"
                android:layout_column="1"
                android:paddingBottom="15dp"
                android:onClick="refreshWifiTapper" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/wifi_label_addr"
                android:id="@+id/wifiAddr_tv"
                android:layout_row="1"
                android:layout_column="1"
                android:paddingTop="0dp"
                android:paddingBottom="2.5dp"
                android:paddingLeft="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/none"
                android:id="@+id/addr_tv"
                android:layout_row="1"
                android:layout_column="3"
                android:paddingLeft="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/wifi_label_netaddr"
                android:id="@+id/wifiServ_tv"
                android:layout_row="2"
                android:layout_column="1"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/none"
                android:id="@+id/net_tv"
                android:layout_row="2"
                android:layout_column="3"
                android:paddingLeft="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/wifi_label_netmask"
                android:id="@+id/wifiMask_tv"
                android:layout_row="3"
                android:layout_column="1"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/none"
                android:id="@+id/mask_tv"
                android:layout_row="3"
                android:layout_column="3"
                android:paddingLeft="0dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:text="@string/button_open"
        android:id="@+id/open_btn"
        android:layout_row="7"
        android:layout_column="0"
        android:textSize="40dp"
        android:background="@drawable/open_button"
        android:drawableLeft="@mipmap/find_bg_128"
        android:drawablePadding="-50dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2C4157"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/copyright"
            android:id="@+id/copyright_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />
    </RelativeLayout>

</LinearLayout>


